datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Ticket {
  id           String        @id @default(cuid())
  number       Int           @default(0)
  guildId      String
  channelId    String        @unique
  openerId     String
  status       TicketStatus  @default(OPEN)
  createdAt    DateTime      @default(now())
  closedAt     DateTime?
  closedById   String?
  closeReason  String?

  // ⇩ NOWE
  openerName    String?   // np. nick na serwerze w momencie utworzenia
  closedByName  String?   // nick zamykającego w momencie zamknięcia

  transcript   TicketTranscript?
}

model TicketTranscript {
  id        String   @id @default(cuid())
  ticketId  String   @unique
  html      String   @db.LongText
  createdAt DateTime @default(now())
  ticket    Ticket   @relation(fields: [ticketId], references: [id], onDelete: Cascade)
}

enum TicketStatus {
  OPEN
  CLOSED
}

model GuildConfig {
  guildId        String   @id
  // u Ciebie to String (JSON w stringu)
  managerRoleIds String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
